<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="SimpleBookKeeping" namespace="SimpleBookKeeping.Database.Entities">

  <class name="Cost" table="Costs" lazy="true">
    <id name="Id" column="id">
      <generator class="guid" />
    </id>

    <property name="Name" column="name"  type="String" />
    <property name="Deleted" column="deleted" type="Boolean" index="idx_deleted" />
    <many-to-one name="Plan" class="PlanId" column="plan_id" cascade="all" />

    <bag name="Expenditures" cascade="none" lazy="true">
      <key column="cost_id" />
      <one-to-many class="Expenditure" />
    </bag>
    
    <bag name="CostDetails" cascade="delete" lazy="true" inverse="true">
      <key column="cost_id" />
      <one-to-many class="CostDetail" />
    </bag>

  </class>

</hibernate-mapping>

