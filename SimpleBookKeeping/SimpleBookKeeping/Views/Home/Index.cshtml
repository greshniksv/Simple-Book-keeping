        //    .setMax(100)
        //    .setStartFrom(0)
        //    .setInterval(10)
        //    .showCounter(false)
        //    .build()
        //    .run();
    });

    var progressBar = {
        setValue: function (value) {
            $("#slider").val(value);
            $("#slider").slider("refresh");
            //$("#slider").slider('disable');
            $("#slider").on("slide", function (event, ui) { return false; });
        }
    }

</script>