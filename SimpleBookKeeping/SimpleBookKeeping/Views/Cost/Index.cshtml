@using System.Web.Optimization
@model IList<SimpleBookKeeping.Models.CostModel>
@{
    ViewBag.Title = "Расходы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/site/cost")

<div class="cost-list">
    <ul class="margin10 custom-list" data-role="listview" data-inset="true">
        <li data-role="list-divider"> Расходы: </li>

        @foreach (var cost in Model)
        {
            <li>
                <a href="#" onclick="redirect('/Cost/View?id=@cost.Id')">
                    @cost.Name 
                    <span class="ui-li-count ui-body-inherit">@cost.CostDetails.Sum(x=>x.Value)</span>
                </a>
            </li>
        }

    </ul>
</div>

<a data-role="button" class="margin10" onclick="redirect('/Cost/Create?planId=@ViewBag.PlanId')">Создать новые</a>

<script type="text/javascript">
    backUrl = "/Plan/View?id=@ViewBag.PlanId"
</script>
